<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DarkPrimaryActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="DayDetailsBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorBlue</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="colorAccent">@color/colorViolet</item>
    </style>

    <style name="PickerTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TextOptionsStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextHelpNormalStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="TextHelpBoldStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlHighlight">@color/colorBlue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:textColorPrimary">@color/colorBlue</item>
        <item name="android:background">@color/dirtyWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:backgroundTint">@color/colorToastStroke</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorViolet</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:textSelectHandle">@color/colorDarkGray</item>
        <item name="android:textSelectHandleLeft">@color/colorDarkGray</item>
        <item name="android:textSelectHandleRight">@color/colorDarkGray</item>
    </style>

    <style name="MyToastAdd">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@color/colorDarkGray</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">0dp</item>
        <item name="stStrokeColor">@color/colorToastStroke</item>
        <item name="stIconStart">@drawable/ic_add</item>
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">20dp</item>
    </style>

